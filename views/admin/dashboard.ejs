    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Livres</h3>
                <button data-toggle="modal" data-target="#add-livre-modal" class="btn btn-outline-success shadow-lg float-right"><i class="fas fa-plus"></i> Ajouter livre</button>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered accent-dark table-hover accent-fuchsia">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Titre</th>
                      <th>Auteur</th>
                      <th>Editeur</th>
                      <th>Date de Parution</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < livres.length; i++) {%>
                    <tr id="<%= `row-id-${livres[i].id}` %>">
                      <th scope="row"><%= i+1 %></th>
                      <td><%= livres[i].TitreLivre %></td>
                      <td><%= livres[i].AuteurLivre %></td>
                      <td><%= livres[i].EditeurLivre %></td>
                      <td><%= livres[i].DateParution %></td>
                      <td class='text-center'>
                        <button class="btn"><i class="fa fa-edit text-warning"></i></button>
                        <button class="btn"><i class="fa fa-trash text-danger"></i></button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>

  <div class="modal fade" id="add-livre-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Ajouter Livre</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <!-- form start -->
            <form>
              <div class="card-body">
                <div class="form-group">
                  <label for="titreLivre">Titre du livre</label>
                  <input type="text" name="TitreLivre" class="form-control" id="titreLivre" placeholder="Saisir le titre du livre">
                </div>
                <div class="form-group">
                  <label for="Auteur">Auteur du livre</label>
                  <input type="text" name="AuteurLivre" class="form-control" id="Auteur" placeholder="Saisir l'auteur">
                </div>
                
                <div class="form-group">
                  <label for="Editeur">Editeur du livre</label>
                  <input type="text" name="EditeurLivre" class="form-control" id="Editeur" placeholder="Saisir l'éditeur">
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
              </div>
              <!-- /.card-body -->
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-outline-success">Save changes</button>
        </div>
      </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

