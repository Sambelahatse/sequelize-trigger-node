  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
      <img src="./adminlte/dist/img/GB.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">Gestion Bibliotheque</span>
    </a>

    <!-- Sidebar -->
    <%- include('./includes/sidebar') %>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Tableau de bord</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              <li class="breadcrumb-item active">Tableau de bord</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Livres</h3>
                <button data-toggle="modal" data-target="#add-livre-modal" class="btn btn-outline-success shadow-lg float-right"><i class="fas fa-plus"></i> Ajouter livre</button>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered accent-dark table-hover accent-fuchsia">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Titre</th>
                      <th>Auteur</th>
                      <th>Editeur</th>
                      <th>Date de Parution</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < livres.length; i++) {%>
                    <tr id="<%= `row-id-${livres[i].id}` %>">
                      <th scope="row"><%= i+1 %></th>
                      <td><%= livres[i].TitreLivre %></td>
                      <td><%= livres[i].AuteurLivre %></td>
                      <td><%= livres[i].EditeurLivre %></td>
                      <td><%= livres[i].DateParution %></td>
                      <td class='text-center'>
                        <button class="btn"><i class="fa fa-edit text-warning"></i></button>
                        <button class="btn"><i class="fa fa-trash text-danger"></i></button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>

  <div class="modal fade" id="add-livre-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Ajouter Livre</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <!-- form start -->
            <form>
              <div class="card-body">
                <div class="form-group">
                  <label for="titreLivre">Titre du livre</label>
                  <input type="text" name="TitreLivre" class="form-control" id="titreLivre" placeholder="Saisir le titre du livre">
                </div>
                <div class="form-group">
                  <label for="Auteur">Auteur du livre</label>
                  <input type="text" name="AuteurLivre" class="form-control" id="Auteur" placeholder="Saisir l'auteur">
                </div>
                
                <div class="form-group">
                  <label for="Editeur">Editeur du livre</label>
                  <input type="text" name="EditeurLivre" class="form-control" id="Editeur" placeholder="Saisir l'Ã©diteur">
                </div>

                <div class="form-group">
                  <label for="DateParution">Date de parution</label>
                  <input type="date" name="DateParution" class="form-control" id="DateParution">
                </div>
              </div>
              <!-- /.card-body -->
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Fermer <i class="far fa-close"></i></button>
          <button type="button" class="btn btn-outline-success">Sauvegarder <i class="fa fa-save"></i></button>
        </div>
      </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <!-- /.content-wrapper -->
  <%- include('./includes/footer.ejs') %>
  <script>
    $(function () {
      $("#example1").DataTable({
        "responsive": true, "lengthChange": false, "autoWidth": false,
        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
      }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });

      var Toast = Swal.mixin({
        toast: true,
        position: 'top-left',
        showConfirmButton: false,
        timer: 3000
      });


      $('.toastsDefaultAutohide').click(function() {
        $(document).Toasts('create', {
          title: 'Toast Title',
          class: 'bg-success',
          body: 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr.'
        })
      });

    });
  </script>
  