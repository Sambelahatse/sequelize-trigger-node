  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
      <img src="./adminlte/dist/img/GB.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">Gestion Bibliotheque</span>
    </a>

    <!-- Sidebar -->
    <%- include('./includes/sidebar_index') %>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Tableau de bord</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              <li class="breadcrumb-item active">Tableau de bord</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-6 ">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner h2">
                <p>Gestion de livre</p>
              </div>
              <div class="icon">
                <i class="fa fa-book"></i>
              </div>
              <a href="#" data-target="#livre-modal" data-toggle="modal" class="small-box-footer">Voir <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <p>Gestion d'exemplaire</p>
              </div>
              <div class="icon">
                <i class="fa fa-book-reader"></i>
              </div>
              <a href="#" data-target="#exemplaire-modal" data-toggle="modal" class="small-box-footer">Voir <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
        </div>
        <div class="row">
          <!-- ./col -->
          <div class="col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <p>Gestion d'emprunteur</p>
              </div>
              <div class="icon">
                <i class="fa fa-user-alt"></i>
              </div>
              <a href="#" data-target="#emprunteur-modal" data-toggle="modal" class="small-box-footer">Voir <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">

                <p>Gestion d'emprunt</p>
              </div>
              <div class="icon">
                <i class="fa fa-cogs"></i>
              </div>
              <a href="#" data-target="#emprunt-modal" data-toggle="modal" class="small-box-footer">Voir <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
        </div>
        <div class="row">
          <div class="col">
            <!-- Widget: user widget style 2 -->
            <div class="card card-widget widget-user-2">
              <!-- Add the bg color to the header using any of the bg-* classes -->
              <div class="widget-user-header bg-warning">
                <!-- /.widget-user-image -->
                <h3 class="widget-user-username">Enregistrements dans la base de données</h3>
                <h5 class="widget-user-desc">Resumé</h5>
              </div>
              <div class="card-footer p-0">
                <ul class="nav flex-column">
                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <%= livre > 1 ? 'Livres' : 'Livre' %><span class="float-right badge bg-primary"><%= livre %></span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <%= exemplaire > 1 ? 'Exempaires' : 'Exemplaire' %> <span class="float-right badge bg-info"><%= exemplaire %></span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <%= emprunteur > 1 ? 'Emprunteurs' : 'Emprunteur' %> <span class="float-right badge bg-success"><%= emprunteur %></span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <%= emprunt > 1 ? 'Emprunts' : 'Emprunt' %> <span class="float-right badge bg-danger"><%= emprunt %></span></span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
            <!-- /.widget-user -->
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>

  <!-- /.content-wrapper -->
